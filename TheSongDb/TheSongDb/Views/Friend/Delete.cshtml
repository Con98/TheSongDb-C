@model TheSongDb.ViewModels.FriendRequestViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "#/Views/Shared/_Layout.cshtml";
}
new SelectList(Model.User, "firstName", "surname", "userName");
@using (Html.BeginForm("Delete", "Friend"))

{
    <h2>Remove Friend</h2>

    <h3>Are You Sure You Want To Delete This Friend?</h3>

    <fieldset disabled>
        @Html.HiddenFor(m => m.Friend.friendId)
        <div class="form-group">
            @Html.LabelFor(m => m.User.userName)
            @Html.TextBoxFor(m => m.Friend.friend2)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.User.firstName)
            @Html.TextBoxFor(m => m.User.firstName)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.User.surname)
            @Html.TextBoxFor(m => m.User.surname)
        </div>
    </fieldset>
    @Html.HiddenFor(m => m.Friend.friendId)

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Remove</button>
        |
        @Html.ActionLink("Back to List", "Index")
    </div>
}